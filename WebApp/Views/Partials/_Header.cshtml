<header>
    <div class="container">

        <div class="logo"><img src="images/logo.svg" alt="">bmerketo</div>
        <nav id="menu" class=" menu-links">
            <div class="d-flex justify-content-between">
                <a class="link" asp-controller="Home" asp-action="Index">HOME</a>
                <a class="link" asp-controller="ProductsPage" asp-action="Index">PRODUCTS</a>
                <a class="link" asp-controller="contacts" asp-action="index">CONTACT</a>
                <a class="link" asp-controller="home" asp-action="index"><i class="fa-regular fa-search"></i></a>


                @if (signInManager.IsSignedIn(User) && User.IsInRole("admin"))
                {
                    <a class="link" asp-controller="admin" asp-action="Index">ADMIN</a>
                }

                @if (signInManager.IsSignedIn(User))
                {
                    <a class="link" asp-controller="account" asp-action="Index">Account</a>


                    <a class="link" asp-controller="account" asp-action="Signout">Logout</a>

                }
                else
                {
                    <a class="link" asp-controller="account" asp-action="Signin">Login</a>
                }

                <a class="link" asp-controller="home" asp-action="index"><i class="fa-solid fa-cart-shopping"></i></a>

            </div>
        </nav>
 
        <div class="toggle">
            <button class="btn-toggle btn-outline-white" data-option="toggle" data-target="#menu">
                <i id="icon" class="fa-regular fa-bars"></i>
            </button>
        </div>
    </div>
</header>