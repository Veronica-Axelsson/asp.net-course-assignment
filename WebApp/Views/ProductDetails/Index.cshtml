                <div class="text">
                    <div class="title">@Model.Name</div>
                    <p>@Model.Description</p>
                    <hr class="hr" />

                    <div class="star-text">
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <i class="fa-solid fa-star"></i>
                        <p class="rev">16 Reviews</p>
                    </div>
                    <div class="price">@("$" + Model.Price)</div>
                    <div class="amount">
                        <div class="amount-button">
                            <button class="minus btn-white">-</button>
                            <button class="nr btn-white">2</button>
                            <button class="plus btn-white ">+</button>
                        </div>
                        <button class="add btn-theme">Add to Cart <i class="fa-light fa-cart-plus"></i></button>
                    </div>


                    <div class="in-stock">
                        <i class="red fa-solid fa-circle"></i>
                        <i class="yellow fa-solid fa-circle"></i>
                        <i class="green fa-solid fa-circle"></i>
                        <div class="sku">SKU: N/A</div>
                    </div>
                    <button class="btn-1 btn-white">Add to wishlist</button>
                    @foreach (var categories in Model.Categories)
                    {
                        <div class="categort-text">@("$" + categories.TagName)</div>

                    }
                </div>
           @* }*@




        </div>

    </div>
</section>
